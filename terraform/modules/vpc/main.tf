# Security Group for VPC Endpoints
resource "aws_security_group" "vpc_endpoints" {
  name        = "sagemaker-vpc-endpoints-sg"
  description = "Security group for VPC endpoints"
  vpc_id      = aws_vpc.main.id

  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = [var.vpc_cidr]
    description = "HTTPS from VPC"
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
    description = "Allow all outbound"
  }

  tags = {
    Name = "sagemaker-vpc-endpoints-sg"
  }
}

# Security Group for SageMaker
resource "aws_security_group" "sagemaker" {
  name        = "sagemaker-domain-sg"
  description = "Security group for SageMaker Domain"
  vpc_id      = aws_vpc.main.id

  # Self-referencing rule for inter-instance communication
  ingress {
    from_port = 0
    to_port   = 65535
    protocol  = "tcp"
    self      = true
    description = "Allow communication within SageMaker"
  }

  # HTTPS for SageMaker Studio
  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = [var.vpc_cidr]
    description = "HTTPS for SageMaker Studio"
  }

  # NFS for EFS (if using shared storage)
  ingress {
    from_port   = 2049
    to_port     = 2049
    protocol    = "tcp"
    cidr_blocks = [var.vpc_cidr]
    description = "NFS for EFS"
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
    description = "Allow all outbound traffic"
  }

  tags = {
    Name = "sagemaker-domain-sg"
  }
}

